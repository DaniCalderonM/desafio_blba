<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <% if client.movies.any? %>
    <td><%= client.movies.last.name %></td>
    <% else %>
    <td>Actualmente no tiene peliculas arrendadas</td>
    <% end %>
    <td><%= link_to "Click Aquí", edit_client_path(client) %></td>
    <td><%= link_to "Click Aquí", client %></td>
</tr>

</div>
